{
  "manifest_version": 2,
  "name": "PackTrack",
  "version": "1.0",
  "web_accessible_resources": ["script.js"],
  "description": "OnTrack's PackTrack",
  "icons": { "16": "packtrack16.png",
             "48": "packtrack48.png",
            "128": "packtrack128.png" },

  "author": "OnTrack",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "permissions": ["contextMenus",
                  "webNavigation",
                  "activeTab",
                  "declarativeContent",
                  "storage",
                  "debugger",
                  "downloads",
                  "pageCapture",
                  "tabCapture",
                  "declarativeNetRequest",
                  "contentSettings",
                  "https://*/*",
                  "http://*/*",
                  "tabs"],
  "content_scripts": [{
        "js": ["contentscript.js"],
        "matches": ["*://*/*"]
    }]
}
