{
  "manifest_version": 2,
  "name": "PackTrack",
  "version": "1.0",

  "description": "OnTrack's PackTrack",
  "icons": { "16": "packtrack16.png",
             "48": "packtrack48.png",
            "128": "packtrack128.png" },

  "author": "OnTrack",
  "permissions": ["contextMenus",
                  "webNavigation",
                  "activeTab",
                  "declarativeContent",
                  "storage",
                  "debugger",
                  "downloads",
                  "pageCapture",
                  "tabCapture",
                  "declarativeNetRequest",
                  "contentSettings"],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
